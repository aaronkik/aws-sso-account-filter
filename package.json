{
  "name": "aws-sso-account-organiser",
  "version": "0.0.1",
  "author": "Aaron Kikabhai",
  "description": "Browser extension that helps organise multiple AWS SSO accounts",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prepare": "is-ci || husky install",
    "dev": "vite",
    "build:background": "vite build -c ./vite.background.config.ts",
    "build:actions": "vite build -c ./vite.actions.config.ts",
    "prebuild": "tsc --noEmit",
    "build": "npm run build:background && npm run build:actions",
    "lint": "prettier --check . && eslint . --ext .ts,.tsx",
    "release": "release-it --no-npm",
    "release:ci": "release-it --no-npm --ci",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@fontsource/inter": "^4.5.15",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.9",
    "tailwind-merge": "^1.12.0"
  },
  "devDependencies": {
    "@csmith/release-it-calver-plugin": "^2022.12.15",
    "@release-it/bumper": "^4.0.2",
    "@tailwindcss/forms": "^0.5.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/chrome": "^0.0.235",
    "@types/node": "^18.16.5",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-c8": "^0.29.8",
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "jsdom": "^22.0.0",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.23",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "release-it": "^15.10.3",
    "tailwindcss": "^3.2.7",
    "typescript": "^5.0.4",
    "vite": "^4.2.0",
    "vitest": "^0.29.8"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{ts,tsx}": "eslint --fix"
  },
  "volta": {
    "node": "18.16.0",
    "npm": "9.6.6"
  }
}
