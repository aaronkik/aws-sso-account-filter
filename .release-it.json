{
  "git": {
    "commitMessage": "Release v${version}",
    "tagName": "v${version}"
  },
  "github": {
    "autoGenerate": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@csmith/release-it-calver-plugin": {
      "format": "yyyy.mm.minor",
      "increment": "calendar"
    },
    "@release-it/bumper": {
      "out": "./public/manifest.json"
    }
  }
}
