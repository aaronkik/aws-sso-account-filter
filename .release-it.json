{
  "git": {
    "commitMessage": "Release v${version}",
    "tagName": "v${version}"
  },
  "github": {
    "autoGenerate": true,
    "release": true
  },
  "hooks": {
    "before:init": "git fetch --prune --prune-tags origin",
    "after:bump": "npm run build",
    "after:release": "echo Successfully released ${name} v${version} in ${repo.repository}."
  },
  "npm": false,
  "plugins": {
    "@csmith/release-it-calver-plugin": {
      "format": "yy.mm.minor",
      "increment": "calendar",
      "fallbackIncrement": "minor"
    },
    "@release-it/bumper": {
      "out": ["./public/manifest.json"]
    }
  }
}
